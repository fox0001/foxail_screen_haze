<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/layout_settings"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:layout_alignParentTop="true"
	tools:context=".HazeSettings">

	<TextView
		android:id="@+id/darknessRateTextView"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="15dp"
		android:text="@string/txt_darkness_rate"
		android:textSize="20sp" />

	<SeekBar
		android:id="@+id/rateSeekBar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:max="100"
		android:layout_margin="15dp"/>

	<Switch
		android:id="@+id/singleColorSwitch"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/txt_single_color"
		android:textSize="20sp"
		android:layout_margin="15dp"/>

	<Button
		android:id="@+id/runBtn"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/btn_run"
		android:textSize="24sp"
		android:layout_margin="10dp" />

	<Button
		android:id="@+id/exitBtn"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/btn_exit"
		android:textSize="24sp"
		android:layout_margin="10dp" />

</LinearLayout>

